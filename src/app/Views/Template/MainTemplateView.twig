<html lang="fr">
<head>
    {{ css("bootstrap.min.css") }}
    {{ css('font-awesome.min.css') }}
    {{ css('main.css') }}

    <title>{% block title %} - {{ 'coockie'|title }}&nbsp;{% endblock %}</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-main">
        <a class="navbar-brand lock" href="#">
                <i class="fas fa-cookie icon-unlock"></i>
                <i class="fas fa-cookie-bite icon-lock"></i>
             Coockie
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ generateUri('home.index') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ generateUri('posts.index') }}">Blog</a>
                </li>
            </ul>
        </div>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ generateUri('admin.index') }}">Admin</a>
            </li>
        </ul>
    </nav>
    <button onclick="topFunction()" id="scroll-to-top" title="Go to top"><i class="fas fa-angle-up"></i></button>
    {% block body %}
        {# body content here#}
    {% endblock %}

    {{ js('jquery-3.4.1.min.js') }}
    {{ js('bootstrap.min.js') }}
    {{ js('konami.js') }}
    {{ js('main.js') }}
</body>
</html>