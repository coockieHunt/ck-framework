{% extends 'Template/MainTemplateView.twig' %}

{% block title %}
    {{ "blog"|title }} {{ parent() }}
{% endblock %}

{% block body %}
        <div class="p-5 px-md-4 bg-main" >
            {% if post.active == 0 %}
                <h3 class="container text-warning">this article is inactive (invisible to the public)</h3>
            {% endif %}
            <h1 class="container text-white">{{ post.name }}</h1>
        </div>
        <div class="container">
            <p class="mt-3">{{ post.content| raw }}</p>
            <span class="font-weight-light blockquote-footer"> Crée le {{ post.create_at|date("m/d/Y à g") }}  heure  {{post.create_at|date("i") }}</span>
        </div>
{% endblock %}