{% extends 'Template/MainTemplateView.twig' %}

{% block title %}
    {{ "blog"|title }} {{ parent() }}
{% endblock %}

{% block body %}
        <div class="p-5 px-md-4 bg-main" ><h1 class="container text-white">{{ post.name }}</h1></div>
        <div class="container">
            <p class="mt-3">{{ post.content|nl2br }}</p>
            <span class="font-weight-light blockquote-footer"> Crée le {{ post.create_at|date("m/d/Y à g") }}  heure  {{post.create_at|date("i") }}</span>
        </div>
{% endblock %}